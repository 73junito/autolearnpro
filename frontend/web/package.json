  },
  "dependencies": {
    "next": "16.1.1",
    "react": "^18",
    "react-dom": "^18",
    "swr": "^2.2.0"
  },
  "devDependencies": {
    "axe-core": "^4.11.0",
    "playwright": "^1.57.0",
    "wait-on": "^7.0.0"
  },
  "vitest": {
    "globals": true,
    "testEnvironment": "jsdom",
    "setupFiles": "./vitest.setup.ts"
  }
}
