{
  "name": "autolearnpro-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "a11y:scan": "node tools/run_playwright_scans.js / /courses /dashboard /admin/dashboard /login",
